<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivitys.Measurment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backArrows"
                    android:layout_width="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/leftarrowa"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="TODO" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Measurements"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/Exit"
                    android:textColor="#FFF"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/send_report"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/send_button"
                    android:layout_marginRight="15dp" />




            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_measurment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/app_bar"
        android:layout_height="match_parent">


   <TextView
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:textColor="@color/colorAccent"
       android:layout_marginLeft="10dp"
       android:text="My Measurements"
       android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/measurementa"
        android:layout_width="match_parent"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:text="hghghghghghghghg"
        android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/add_measurement"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:background="@drawable/roundshapebtn"
        android:text="Add a measurement"
        android:layout_marginLeft="30dp"
        android:textColor="#FFF"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_height="50dp" />
</RelativeLayout>