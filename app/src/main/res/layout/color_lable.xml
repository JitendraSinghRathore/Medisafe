<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:text="Lable"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:onClick="color1"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/circlecolor1"
          android:layout_width="20dp"
          android:src="@drawable/round"
          android:layout_height="20dp" />

        <TextView
            android:id="@+id/texicolor1"
            android:layout_width="wrap_content"
            android:text="General"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/checkcolor1"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/checkmark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="color1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:src="@drawable/allergy"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:text="Allergy"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="color1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:src="@drawable/emergency"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Emergency"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/checkmark"
            android:layout_marginRight="45dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner4"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="color1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:src="@drawable/mood"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Mood"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner5"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="color1"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:src="@drawable/side"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Side effects"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:src="@drawable/checkmark"
            android:visibility="gone"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp" />

    </LinearLayout>

</LinearLayout>